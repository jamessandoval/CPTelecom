<div class="container-fluid">
    <div class="row">
        <div class="col-xs-hidden col-sm-2"></div>
        <div class="col-xs-12 col-sm-8">
            <h1>Employee Search</h1>
            <form class="form-inline" action="/employer_search" method="post">
                <div class="form-group">
                    <label class="sr-only">Search</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="employeeSearchInput" name="search">
                    </div>
                </div>
                <button type="submit" class="btn btn-default">Search</button>
            </form>
        </div>
        <div class="col-xs-hidden col-sm-2"></div>
    </div>
</div>
<hr>
<div class="container-fluid">
    <div class="row">
        <div class="col-xs-hidden col-sm-2"></div>
        <div class="col-xs-12 col-sm-8">
            <table>
                {{#job}}
                <tr>
                    <td>{{title}}</td>
                    <td>{{company}}</td>
                    <td>{{summary}}</td>
                    <td>{{date_posted}}</td>
                    <td>{{location}}</td>
                    <td>{{rating}}</td>
                    <td>{{url}}</td>
                </tr>
                {{/job}}
            </table>
        </div>
        <div class="col-xs-hidden col-sm-2"></div>
    </div>
</div>
