<script>
document.getElementById("jobs_nav").classList.add("active")
</script>
<div class="container-fluid">
    <div class="row">
        <div class="col-xs-hidden col-sm-2"></div>
        <div class="col-xs-12 col-sm-8">
            <h1>Job Search</h1>
            <form class="form-inline" action="/jobs" method="post">
                <div class="form-group">
                    <label class="sr-only">Search</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="employeeSearchInput" name="search">
                    </div>
                </div>
                <button type="submit" class="btn btn-default">Search</button>
            </form>
        </div>
        <div class="col-xs-hidden col-sm-2"></div>
    </div>
</div>
<hr>
<div class="container-fluid">
    <div class="row">
        <div class="col-xs-hidden col-sm-2"></div>
        <div class="col-xs-12 col-sm-8">
            <table class="table">
                <tr>
                    <th>Job Title:</th>
                    <th>Company:</th>
                    <th>Description:</th>
                    <th>Date Added:</th>
                    <th>Url:</th>
                </tr>
                {{#job}}
                <tr>
                	<td>{{id}}</td>
                    <td>{{jobTitle}}</td>
                    <td>{{company}}</td>
                    <td>{{snippet}}</td>
                    <td>{{daysAgo}}</td>
                    <td><a href="{{url}}" target=="_blank">Link</a></td>
                </tr>
                {{/job}}
            </table>
        </div>
        <div class="col-xs-hidden col-sm-2"></div>
    </div>
</div>
